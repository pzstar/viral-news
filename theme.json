{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "900px",
            "wideSize": "1200px"
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "300 900",
                            "src": [
                                "file:./assets/fonts/inter/Inter-VariableFont_slnt,wght.woff2"
                            ]
                        }
                    ],
                    "fontFamily": "\"Inter\", sans-serif",
                    "name": "Inter",
                    "slug": "body"
                },
                {
                    "fontFace": [
                        {
                            "fontFamily": "Jost",
                            "fontStyle": "normal",
                            "fontWeight": "400 700",
                            "src": ["file:./assets/fonts/jost/Jost-VariableFont_wght.woff2"]
                        },
                        {
                            "fontFamily": "Jost",
                            "fontStyle": "italic",
                            "fontWeight": "400 700",
                            "src": ["file:./assets/fonts/jost/Jost-Italic-VariableFont_wght.woff2"]
                        }
                    ],
                    "fontFamily": "\"Jost\", sans-serif",
                    "name": "Jost",
                    "slug": "heading"
                }
            ],
            "fontSizes": [
                {
                    "fluid": false,
                    "name": "Small",
                    "size": "0.9rem",
                    "slug": "small"
                },
                {
                    "fluid": false,
                    "name": "Medium",
                    "size": "1.05rem",
                    "slug": "medium"
                },
                {
                    "fluid": {
                        "min": "1.39rem",
                        "max": "1.85rem"
                    },
                    "name": "Large",
                    "size": "1.85rem",
                    "slug": "large"
                },
                {
                    "fluid": {
                        "min": "1.85rem",
                        "max": "2.5rem"
                    },
                    "name": "Extra Large",
                    "size": "2.5rem",
                    "slug": "x-large"
                },
                {
                    "fluid": {
                        "min": "2.5rem",
                        "max": "3.27rem"
                    },
                    "name": "Extra Extra Large",
                    "size": "3.27rem",
                    "slug": "xx-large"
                }
            ],
            "writingMode": true
        }
    },
    "styles": {
        "blocks": {
            "core/image": {
                "spacing": {
                    "margin": {
                        "bottom": "0"
                    }
                }
            }
        },
        "spacing": {
            "blockGap": "1.2rem",
            "padding": {
                "left": "50px",
                "right": "50px"
            }
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "lineHeight": "1.15"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "clamp(1.1rem, 1.1rem + ((1vw - 0.2rem) * 0.767), 1.5rem)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "400",
                    "lineHeight": "1.2"
                }
            },
            "link": {
                "typography": {
                    "textDecoration": "none"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "fontStyle": "normal",
            "fontWeight": "400",
            "lineHeight": "1.55"
        }
    }
}