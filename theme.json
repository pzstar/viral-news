{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "900px",
            "wideSize": "1200px"
        }
    },
    "styles": {
        "blocks": {
            "core/image": {
                "spacing": {
                    "margin": {
                        "bottom": "0",
                        "top": "0"
                    }
                }
            }
        },
        "spacing": {
            "padding": {
                "left": "50px",
                "right": "50px"
            }
        }
    }
}